<?xml version="1.0" encoding="UTF-8"?>  
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartHouse"
    x:Class="SmartHouse.SuperButton"
    Padding="0" Margin="0" BackgroundColor="AliceBlue" RowSpacing="0">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <local:ImageButton Margin="0" x:Name="Icon" Source="{Binding Icon}" Grid.Row="0" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="White"/>
    <Label Margin="0" x:Name="Text" Text="{Binding Caption}" VerticalOptions="End" HorizontalOptions="Center" LineBreakMode="NoWrap" Font="Small" Grid.Row="1" BackgroundColor="White"/>
    <!-- <local:ImageButton x:Name="Icon" Source="{Binding Icon}" Grid.Row="0"/>
    <Label x:Name="Text" Text="{Binding Caption}" HorizontalOptions="Center" LineBreakMode="NoWrap" Font="Small" /> -->
</Grid>