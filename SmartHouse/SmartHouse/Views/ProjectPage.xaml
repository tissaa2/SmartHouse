             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartHouse"
             xmlns:controls="clr-namespace:SmartHouse.Controls" 
            x:Class="SmartHouse.Views.ProjectPage"
             IsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
